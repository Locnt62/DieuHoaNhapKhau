@using idn.AnPhu.Biz.Models


@model Manufacters

<div class="main-content-inner">
    <div class="breadcrumb" id="breadcrumbs">
        <ul class="breadcrumb">
            <li>
                <i class="ace-icon fa fa-home home-icon"></i>
                <a href="#">Home</a>
            </li>
            <li><a href="@Url.Action("Admin","Account")">Dashboard</a></li>
            <li><a href="@Url.Action("Index","Manufacters")">Danh sách hãng sản xuất</a></li>
            <li class="active">Thêm mới Hãng điều hòa</li>
        </ul>
    </div>
    <div class="page-content">
        <div class="page-header">Tạo mới hãng sản xuất</div>
        <div class="row">
            <a id="btn_submit_save" class="btn btn-sm btn-success" href="javascript:;" title="@S("Save")">
                <span style="font-size:15px"><i class="fa fa-save"></i> @S("Save")</span>
            </a>
        </div>
        @using (Html.BeginForm("Create", "Manufacters", FormMethod.Post, new { id = "manageForm", @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <div class="row" style="padding-top:50px">
                <div class="col-sm-10 col-xs-12">
                    <div class="form-horizontal" role="form">
                        <div class="form-group">
                            <label class="col-sm-4 control-label no-padding-right"> Tên hãng sản xuất <span style="color:red">*</span> </label>

                            <div class="col-sm-8">
                                <input type="text" id="ManufactName" name="ManufactName" class="col-xs-10 col-sm-5 col-lg-10 VideoCategoryTitle" required />
                            </div>

                        </div>
                        <div class="form-group">
                            <label class="col-sm-4 control-label no-padding-right">Trạng thái</label>
                            <label class="col-sm-8">
                                <input type="checkbox" id="IsActive" name="IsActive" class="ace ace-switch IsActive" value="true" />
                                <span class="lbl" style="margin-top: 5px;"></span>
                                <input type="hidden" name="IsActive" value="false" />
                            </label>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>




